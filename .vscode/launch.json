{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++: debug target",
      "preLaunchTask": "build debug target",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-bin/${relativeFileDirname}/${selectedText}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bazel-${workspaceRootFolderName}/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ]
    },
    {
      "name": "Python: debug current file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
